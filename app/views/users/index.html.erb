<div class="flex flex-col">
  <div class="mb-2">
    <%= link_to 'My profile', user_path(current_user) %>
  </div>
  <% @users.each do |u| %>
    <div class="text-lg">
      <%= u.email %>
      <%= button_to 'add friend', friend_requests_path(user_id: u.id), method: :post %>
    </div>
  <% end %>
</div>
